# Install command-line tools
# Usage: `brew bundle Brewfile`

tap homebrew/dupes
tap homebrew/versions
tap thoughtbot/formulae

install ack
install autoenv
install bash                        # add `/usr/local/bin/bash` to /etc/shells
install coreutils                   # add `/usr/local/gnubin` to $PATH
install ctags
install diffutils
install dnsmasq
install findutils --default-names
install gawk
install grc
install git
install gnu-sed --default-names
install gnu-tar --default-names
install gnu-which --default-names
install grep --default-names
install gzip
install haskell-platform
install hub
install imagemagick --with-webp
install less
install lynx
install mit-scheme
install moreutils
install node                        # TODO switch to nvm
install openssh --with-brewed-openssl
install pv
install python --with-brewed-openssl
install rbenv
install rcm
install reattach-to-user-namespace
install rename
install rlwrap
install ruby-build
install rsync
install the_silver_searcher
install tmux
install tree
install unzip
install watch
install wdiff --with-gettext
install webkit2png
install wget --enable-iri
install xz
install z
install zsh                         # add `/usr/local/bin/zsh` to /etc/shells
