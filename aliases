# directories
alias md="mkdir -p"
alias rd="rmdir"

# GNU ls
alias ls="/usr/local/bin/gls --color=auto"
alias l="ls -AF"
alias ll="ls -alF"
alias lll="ls -alF --color=always | less -R"
alias lsd="ls -AlF --color=always | grep '^d' --color=never"

