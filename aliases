# helpers
alias cp="cp -ir"
alias d="cd ~/Desktop/"
alias desk="cd ~/Desktop/"
alias digga="dig +short"
alias down="cd ~/Downloads/"
alias dots="cd ~/.dotfiles/"
alias drop="cd ~/Dropbox/"
alias fm="foreman run python manage.py"
alias fr="foreman run"
alias fs="foreman start"
alias how="apropos"
alias json="jq . -C"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com" # get external ip
alias pubkey="cat ~/.ssh/id_rsa.pub"
alias ln="ln -iv"
alias mv="mv -i"
alias mux="tmuxinator"
alias o="open ."
alias p="cd ~/Projects"
alias proj="cd ~/Projects"
alias ptr="dig ptr +short"
alias rcup="rcup -v"
alias scheme="rlwrap csi"
alias sudo="sudo " # use sudo with aliases
alias tl="tmux list-sessions | awk '{print \$1}' | sed 's/:$//g' | column -x"
alias top="htop"
alias tower="gittower ."
alias trim="tr -d ' \t\n\r\f'"
alias x="exit"

# git
#alias git="hub"
alias ga="git add"
alias gaa="git add -A"
alias gb="git branch"
alias gc="git commit"
alias gc="git commit"
alias gca="git commit --amend --no-edit"
alias gcam="git commit --amend"
alias gcm="git commit -m"
alias gf="git fetch"
alias gh="git browse"
alias gl="git log"
alias gm="git merge"
alias gr="git rebase"
alias gri="git rebase -i"
alias gr2="git rebase -i HEAD~2"
alias gs="git status"
alias gt="git tree"
alias gu="git up"
alias pull="git pull"
alias push="git push"

# virtualenv
alias mkvirtualenv3="mkvirtualenv --python=$(which python3)"
alias mkvenv="mkvirtualenv $(basename $(pwd))"
alias mkvenv3="mkvirtualenv3 $(basename $(pwd))"

# rc files
alias aliases="vim ~/.aliases; source ~/.aliases"
alias vimrc="vim ~/.vimrc"
alias vimrcb="vim ~/.vimrc.bundles"
alias zshenv="vim ~/.zshenv; source ~/.zshenv"
alias zshenvl="vim ~/.zshenv.local; source ~/.zshenv"
alias zshrc="vim ~/.zshrc; source ~/.zshrc"
alias zshrcl="vim ~/.zshrc.local; source ~/.zshrc.local"
