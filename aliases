# directories
alias md="mkdir -p"
alias rd="rmdir"

# GNU ls
alias ls="/usr/local/bin/gls --color=tty"
alias l="ls -AF"
alias ll="ls -alF"

# other GNU aliases
alias echo="/usr/local/bin/gecho"
alias false="/usr/local/bin/gfalse"
alias kill="/usr/local/bin/gkill"
alias printf="/usr/local/bin/gprintf"
alias pwd="/usr/local/bin/gpwd"
alias test="/usr/local/bin/gtest"
alias true="/usr/local/bin/gtrue"
alias which="/usr/local/bin/which 2>/dev/null"

# helpers
alias cp="cp -ir"
alias d="cd ~/Desktop/"
alias desk="cd ~/Desktop/"
alias down="cd ~/Downloads/"
alias dots="cd ~/.dotfiles/"
alias drop="cd ~/Dropbox/"
alias myip="dig +short myip.opendns.com @resolver1.opendns.com" # get external ip
alias pubkey="cat ~/.ssh/id_rsa.pub"
alias ln="ln -iv"
alias mv="mv -i"
alias p="cd ~/Projects"
alias proj="cd ~/Projects"
alias rcup="rcup -v"
alias scheme="rlwrap scheme"
alias sudo="sudo "
alias tower="gittower ."
alias vi="vim"

# git
alias git="hub"
alias ga="git add"
alias gaa="git add -A"
alias gb="git branch"
alias gc="git commit"
alias gl="git log"
alias gcam="git commit -am"
alias gcm="git commit -m"
alias gh="git browse"
alias gs="git status"
alias gt="git tree"

# rc files
alias aliases="vim ~/.aliases; source ~/.aliases"
alias vimrc="vim ~/.vimrc"
alias vimrcb="vim ~/.vimrc.bundles"
alias zshenv="vim ~/.zshenv; source ~/.zshenv"
alias zshrc="vim ~/.zshrc; source ~/.zshrc"
alias zshrcl="vim ~/.zshrc.local; source ~/.zshrc.local"
